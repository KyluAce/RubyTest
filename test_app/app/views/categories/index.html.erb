<div class = "hero-unit">
<h1>Categories</h1>

<%= link_to("Add new category ", {:action => 'new',}, :class => 'btn btn-mini btn-primary')%>

<p>Ilość kategorii: <%= @categories.size%> </p>

<table class="table table-striped">

	<tr class = "info">

		<th>position</th>
		<th>name</th>
		<th>Sites </th>
		<th>visibility </th>
		<th>action </th>
		</tr>
<% @categories.each do |category| %>

	</tr>

		<td><%= category.position %></td>
		<td><%= category.name %></td>
		<td class = "center"><%= category.stronas.size %></td>
		<td class = "center"><%= status(category.visibility)%></td>
		
		<td class = "actions">

		<%= link_to("Show", {:action => 'show', :id => category.id}, :class => 'btn btn-xs btn-default')%>
		<%= link_to("Edit", {:action => 'edit', :id => category.id}, :class => 'btn btn-xs btn-primary')%>
		<%= link_to("Delete", {:action => 'delete', :id => category.id }, :class => 'btn btn-xs btn-danger')%>
		 	
		 </td>
		



	</tr>
	<% end %>

</table>
</div>