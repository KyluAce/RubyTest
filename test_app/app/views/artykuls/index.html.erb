<div class = "hero-unit">
<h1>Articles</h1>

<%= link_to("Add new article ", {:action => 'new',}, :class => 'btn btn-mini btn-primary')%>

<p>Ilość artykułów: <%= @artykuls.size%> </p>

<table class="table table-striped">

	<tr class = "info">

		<th>position</th>
		<th>strona</th>
		<th>name</th>
		<th>visibility </th>
		<th>action</th>
		</tr>
<% @artykuls.each do |art| %>

	</tr>

		<td><%= art.position %></td>
		<td><%= art.strona.name %></td>
		<td><%= art.name %></td>
		<td class = "center"><%= status(art.visibility)%></td>
		
		<td class = "actions">

		<%= link_to("Show", {:action => 'show', :id => art.id}, :class => 'btn btn-xs btn-default')%>
		<%= link_to("Edit", {:action => 'edit', :id => art.id}, :class => 'btn btn-xs btn-primary')%>
		<%= link_to("Delete", {:action => 'delete', :id => art.id }, :class => 'btn btn-xs btn-danger')%>
		 	
		 </td>
		



	</tr>
	<% end %>

</table>
</div> 