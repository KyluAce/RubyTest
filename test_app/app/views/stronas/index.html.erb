<div class = "hero-unit">
<h1>Pages</h1>

<%= link_to("Add new page ", {:action => 'new',}, :class => 'btn btn-mini btn-primary')%>

<p>Ilość stron: <%= @stronas.size%> </p>

<table class="table table-striped">

	<tr class = "info">

		<th>position</th>
		<th>name</th>
		<th>category</th>
		<th>Articles </th>
		<th>visibility </th>
		<th>action</th>
		</tr>
<% @stronas.each do |page| %>

	</tr>

		<td><%= page.position %></td>
		<td><%= page.name %></td>
		<td><%= page.category.name %></td>
		<td class = "center"><%= page.artykuls.size%></td>
		<td class = "center"><%= status(page.visibility)%></td>
		
		<td class = "actions">

		<%= link_to("Show", {:action => 'show', :id => page.id}, :class => 'btn btn-xs btn-default')%>
		<%= link_to("Edit", {:action => 'edit', :id => page.id}, :class => 'btn btn-xs btn-primary')%>
		<%= link_to("Delete", {:action => 'delete', :id => page.id }, :class => 'btn btn-xs btn-danger')%>
		 	
		 </td>
		



	</tr>
	<% end %>

</table>
</div>